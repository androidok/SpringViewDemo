<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp" >

        <com.example.springviewdemo.SpringView
            android:id="@+id/sot_springview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/title_translucence"
            android:weightSum="9" >

            <TextView
                android:id="@+id/tv_tab_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/sort_second_tv_color"
                android:textSize="@dimen/sort_second_tv_size" />

            <TextView
                android:id="@+id/tv_tab_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/sort_second_tv_color"
                android:textSize="@dimen/sort_second_tv_size" />

            <TextView
                android:id="@+id/tv_tab_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/sort_second_tv_color"
                android:textSize="@dimen/sort_second_tv_size" />

            <TextView
                android:id="@+id/tv_tab_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/sort_second_tv_color"
                android:textSize="@dimen/sort_second_tv_size" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.0" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:flipInterval="30"
            android:focusable="false"
            android:persistentDrawingCache="animation" >
        </android.support.v4.view.ViewPager>
    </RelativeLayout>

</LinearLayout>